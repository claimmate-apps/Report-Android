<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="style_btn_main_horizontal_tab" parent="android:Widget.Holo.Light.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@drawable/form_menu_tab</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/white</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/white</item> <!-- activated color change as you wish -->
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>
</resources>
