<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:background="@drawable/fill_round_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCarDec"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtCar"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtCarInc"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

    <TextView
        android:text="car garage"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/chkAttached"
        android:text="attached"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtAddGarage"
        android:text="+"
        android:paddingBottom="5dp"
        android:textSize="25sp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/fill_round_shape"
        android:layout_width="35dp"
        android:layout_height="35dp" />
</LinearLayout>